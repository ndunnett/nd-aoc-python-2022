{
  "name": "Python",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.11",
  "hostRequirements": {
    "cpus": 1,
    "memory": "1gb",
    "storage": "1gb"
  },
  "postCreateCommand": {
    "pip-install": "pip install --user --no-input -r requirements.txt"
  },
  "postAttachCommand": {
    "change-dir": "cd source"
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}
